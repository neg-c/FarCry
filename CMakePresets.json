{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 27,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "conf-common",
      "description": "General settings that apply to all configurations",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "VCPKG_INSTALL_OPTIONS": "--clean-after-build"
      }
    },
    {
      "name": "conf-windows-common",
      "description": "Windows settings for MSBuild toolchain that apply to msvc",
      "hidden": true,
      "inherits": "conf-common",
      "generator": "Ninja",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_WINDOWS_EXPORT_ALL_SYMBOLS": "ON",
        "CMAKE_CXX_FLAGS": "/EHs"
      }
    },
    {
      "name": "ninja-x86-debug",
      "displayName": "x86 Debug",
      "description": "Target Windows x86 with debug build type",
      "inherits": "conf-common",
      "generator": "Ninja Multi-Config",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "ninja-x86-release",
      "displayName": "x86 Release",
      "description": "Target Windows x86 with release build type",
      "inherits": "conf-common",
      "generator": "Ninja Multi-Config",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "ninja-x64-debug",
      "displayName": "x64 Debug",
      "description": "Target Windows x64 with debug build type",
      "inherits": "conf-windows-common",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "ninja-x64-release",
      "displayName": "x64 Release",
      "description": "Target Windows x64 with release build type",
      "inherits": "conf-windows-common",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    }

  ],
  "buildPresets": [
    {
      "name": "x86-debug",
      "configurePreset": "ninja-x86-debug",
      "configuration": "Debug"
    },
    {
      "name": "x86-release",
      "configurePreset": "ninja-x86-release",
      "configuration": "Release"
    },
    {
      "name": "x64-debug",
      "configurePreset": "ninja-x64-debug",
      "configuration": "Debug"
    },
    {
      "name": "x64-release",
      "configurePreset": "ninja-x64-release",
      "configuration": "Release"
    }
  ]
}
